@page
@model PharmacyStorage.Pages.Medications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Medicine.ID" />
            <div class="form-group">
                <label asp-for="Medicine.Name" class="control-label"></label>
                <input asp-for="Medicine.Name" class="form-control" />
                <span asp-validation-for="Medicine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Description" class="control-label"></label>
                <input asp-for="Medicine.Description" class="form-control" />
                <span asp-validation-for="Medicine.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Quantity" class="control-label"></label>
                <input asp-for="Medicine.Quantity" class="form-control" />
                <span asp-validation-for="Medicine.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Price" class="control-label"></label>
                <input asp-for="Medicine.Price" class="form-control" />
                <span asp-validation-for="Medicine.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.ExpirationDate" class="control-label"></label>
                <input asp-for="Medicine.ExpirationDate" class="form-control" />
                <span asp-validation-for="Medicine.ExpirationDate" class="text-danger"></span>
            </div>
            <label asp-for="Medicine.ProviderID" class="control-label">Provider Name</label>
            <select asp-for="Medicine.ProviderID" class="form-control" asp-items="ViewBag.ProviderID">
            </select>
            <span asp-validation-for="Medicine.ProviderID" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
