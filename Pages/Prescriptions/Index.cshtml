@page
@model PharmacyStorage.Pages.Prescriptions.IndexModel

@{
    ViewData["Title"] = "Prescriptions";
}

<h1>Prescriptions</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Client.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Medicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Doctor.DoctorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prescription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.DoctorName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
